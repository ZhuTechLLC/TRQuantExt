---
// 新闻情绪分析页面
import Layout from '../layouts/HandbookLayout.astro';
---

<Layout title="新闻情绪分析系统">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">新闻情绪分析系统</h1>
      <p class="text-lg text-gray-600">基于AI的新闻情绪分析和量化因子提取系统</p>
    </div>

    <!-- 分析工具区域 -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- 单条新闻分析 -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">单条新闻分析</h2>
        <form id="singleNewsForm" class="space-y-4">
          <div>
            <label for="newsText" class="block text-sm font-medium text-gray-700 mb-2">
              新闻文本
            </label>
            <textarea
              id="newsText"
              name="newsText"
              rows="6"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="请输入要分析的新闻文本..."
            ></textarea>
          </div>
          
          <div>
            <label for="analyzerType" class="block text-sm font-medium text-gray-700 mb-2">
              分析器类型
            </label>
            <select
              id="analyzerType"
              name="analyzerType"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="hybrid">混合分析器 (推荐)</option>
              <option value="vader">VADER分析器</option>
              <option value="textblob">TextBlob分析器</option>
            </select>
          </div>
          
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            开始分析
          </button>
        </form>
        
        <!-- 分析结果 -->
        <div id="singleResult" class="mt-6 hidden">
          <h3 class="text-lg font-semibold mb-3">分析结果</h3>
          <div id="singleResultContent" class="bg-gray-50 p-4 rounded-md"></div>
        </div>
      </div>

      <!-- 因子提取 -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">因子提取</h2>
        <div class="space-y-4">
          <div>
            <h3 class="text-lg font-medium mb-3">从情绪分析结果提取因子</h3>
            <p class="text-gray-600 mb-4">将情绪分析结果转化为可量化的投资因子</p>
            <button
              id="extractFactorsBtn"
              class="bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500"
            >
              提取因子
            </button>
          </div>
          
          <div>
            <h3 class="text-lg font-medium mb-3">因子配置</h3>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" id="macroFactor" checked class="mr-2">
                <span class="text-sm">宏观经济因子</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" id="technicalFactor" checked class="mr-2">
                <span class="text-sm">技术因子</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" id="valuationFactor" checked class="mr-2">
                <span class="text-sm">估值因子</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" id="sentimentFactor" checked class="mr-2">
                <span class="text-sm">情绪因子</span>
              </label>
            </div>
          </div>
        </div>
        
        <!-- 因子提取结果 -->
        <div id="factorResult" class="mt-6 hidden">
          <h3 class="text-lg font-semibold mb-3">提取的因子</h3>
          <div id="factorResultContent" class="bg-gray-50 p-4 rounded-md"></div>
        </div>
      </div>
    </div>

    <!-- 策略生成区域 -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-2xl font-semibold mb-4">策略生成</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-medium mb-3">生成QuantConnect策略</h3>
          <p class="text-gray-600 mb-4">基于提取的因子生成可执行的量化策略代码</p>
          <button
            id="generateStrategyBtn"
            class="bg-orange-600 text-white py-2 px-4 rounded-md hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            生成策略
          </button>
        </div>
        
        <div>
          <h3 class="text-lg font-medium mb-3">策略参数</h3>
          <div class="space-y-2">
            <div>
              <label class="block text-sm font-medium text-gray-700">策略类型</label>
              <select id="strategyType" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
                <option value="news_sentiment">新闻情绪策略</option>
                <option value="momentum">动量策略</option>
                <option value="mean_reversion">均值回归策略</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">回测周期</label>
              <input type="number" id="backtestDays" value="252" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm">
            </div>
          </div>
        </div>
      </div>
      
      <!-- 策略生成结果 -->
      <div id="strategyResult" class="mt-6 hidden">
        <h3 class="text-lg font-semibold mb-3">生成的策略代码</h3>
        <div class="bg-gray-900 text-green-400 p-4 rounded-md overflow-x-auto">
          <pre id="strategyCode" class="text-sm"></pre>
        </div>
        <div class="mt-4">
          <button
            id="downloadStrategyBtn"
            class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 mr-2"
          >
            下载策略文件
          </button>
          <button
            id="copyStrategyBtn"
            class="bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700"
          >
            复制代码
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // 全局变量存储分析结果
  let currentSentimentData = null;
  let currentFactors = null;

  // 单条新闻分析
  document.getElementById('singleNewsForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const newsText = document.getElementById('newsText').value;
    const analyzerType = document.getElementById('analyzerType').value;
    
    if (!newsText.trim()) {
      alert('请输入新闻文本');
      return;
    }
    
    try {
      const response = await fetch('/api/sentiment/analyze', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          text: newsText,
          analyzer: analyzerType
        })
      });
      
      const result = await response.json();
      
      if (result.error) {
        throw new Error(result.error);
      }
      
      currentSentimentData = result;
      displaySingleResult(result);
      
    } catch (error) {
      alert('分析失败: ' + error.message);
    }
  });

  // 因子提取
  document.getElementById('extractFactorsBtn').addEventListener('click', async () => {
    if (!currentSentimentData) {
      alert('请先进行情绪分析');
      return;
    }
    
    try {
      const config = {
        macro_factor: document.getElementById('macroFactor').checked,
        technical_factor: document.getElementById('technicalFactor').checked,
        valuation_factor: document.getElementById('valuationFactor').checked,
        sentiment_factor: document.getElementById('sentimentFactor').checked
      };
      
      const response = await fetch('/api/factors/extract', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          sentimentData: currentSentimentData,
          config: config
        })
      });
      
      const result = await response.json();
      
      if (result.error) {
        throw new Error(result.error);
      }
      
      currentFactors = result;
      displayFactorResult(result);
      
    } catch (error) {
      alert('因子提取失败: ' + error.message);
    }
  });

  // 策略生成
  document.getElementById('generateStrategyBtn').addEventListener('click', async () => {
    if (!currentFactors) {
      alert('请先提取因子');
      return;
    }
    
    try {
      const strategyType = document.getElementById('strategyType').value;
      const backtestDays = document.getElementById('backtestDays').value;
      
      const parameters = {
        backtest_days: parseInt(backtestDays),
        start_date: '2024-01-01',
        end_date: '2025-01-01'
      };
      
      const response = await fetch('/api/strategies/generate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          strategyType: strategyType,
          parameters: parameters
        })
      });
      
      const result = await response.json();
      
      if (result.error) {
        throw new Error(result.error);
      }
      
      displayStrategyResult(result);
      
    } catch (error) {
      alert('策略生成失败: ' + error.message);
    }
  });

  // 显示单条分析结果
  function displaySingleResult(result) {
    const resultDiv = document.getElementById('singleResult');
    const contentDiv = document.getElementById('singleResultContent');
    
    if (Array.isArray(result) && result.length > 0) {
      const analysis = result[0];
      contentDiv.innerHTML = `
        <div class="space-y-2">
          <div><strong>情绪得分:</strong> ${analysis.sentiment_score?.toFixed(3) || 'N/A'}</div>
          <div><strong>情绪标签:</strong> <span class="px-2 py-1 rounded text-sm ${getSentimentColor(analysis.sentiment_label)}">${analysis.sentiment_label || 'N/A'}</span></div>
          <div><strong>置信度:</strong> ${analysis.confidence?.toFixed(3) || 'N/A'}</div>
          <div><strong>分析器:</strong> ${analysis.analyzer || 'N/A'}</div>
        </div>
      `;
    } else {
      contentDiv.innerHTML = '<p class="text-red-600">分析结果格式错误</p>';
    }
    
    resultDiv.classList.remove('hidden');
  }

  // 显示因子提取结果
  function displayFactorResult(result) {
    const resultDiv = document.getElementById('factorResult');
    const contentDiv = document.getElementById('factorResultContent');
    
    if (result.factors && Array.isArray(result.factors)) {
      let html = '<div class="space-y-3">';
      
      result.factors.forEach(factor => {
        html += `
          <div class="border border-gray-200 rounded p-3">
            <div class="flex justify-between items-start">
              <div>
                <div class="font-medium">${factor.name || '未知因子'}</div>
                <div class="text-sm text-gray-600">${factor.type || '未知类型'}</div>
                <div class="text-sm text-gray-500">${factor.description || '无描述'}</div>
              </div>
              <div class="text-right">
                <div class="text-lg font-bold ${factor.value >= 0 ? 'text-green-600' : 'text-red-600'}">
                  ${factor.value?.toFixed(3) || 'N/A'}
                </div>
                <div class="text-xs text-gray-500">${factor.unit || ''}</div>
              </div>
            </div>
          </div>
        `;
      });
      
      html += '</div>';
      contentDiv.innerHTML = html;
    } else {
      contentDiv.innerHTML = '<p class="text-red-600">因子提取结果格式错误</p>';
    }
    
    resultDiv.classList.remove('hidden');
  }

  // 显示策略生成结果
  function displayStrategyResult(result) {
    const resultDiv = document.getElementById('strategyResult');
    const codeDiv = document.getElementById('strategyCode');
    
    if (result.strategy_code) {
      codeDiv.textContent = result.strategy_code;
      resultDiv.classList.remove('hidden');
    } else {
      alert('策略生成失败: 未返回策略代码');
    }
  }

  // 获取情绪标签颜色
  function getSentimentColor(label) {
    switch(label) {
      case 'positive': return 'bg-green-100 text-green-800';
      case 'negative': return 'bg-red-100 text-red-800';
      case 'neutral': return 'bg-gray-100 text-gray-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  }

  // 下载策略文件
  document.getElementById('downloadStrategyBtn').addEventListener('click', () => {
    const code = document.getElementById('strategyCode').textContent;
    if (!code) {
      alert('没有可下载的策略代码');
      return;
    }
    
    const blob = new Blob([code], { type: 'text/python' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'news_sentiment_strategy.py';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  });

  // 复制策略代码
  document.getElementById('copyStrategyBtn').addEventListener('click', () => {
    const code = document.getElementById('strategyCode').textContent;
    if (!code) {
      alert('没有可复制的策略代码');
      return;
    }
    
    navigator.clipboard.writeText(code).then(() => {
      alert('策略代码已复制到剪贴板');
    }).catch(() => {
      alert('复制失败，请手动复制');
    });
  });
</script>








