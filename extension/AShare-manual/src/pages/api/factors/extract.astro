// 因子提取API端点
import { spawn } from 'child_process';
import path from 'path';

export async function POST({ request }) {
  try {
    const body = await request.json();
    const { sentimentData, config = {} } = body;
    
    if (!sentimentData || !Array.isArray(sentimentData)) {
      return new Response(JSON.stringify({ error: '缺少情绪数据或格式错误' }), {
        status: 400,
        headers: { 'Content-Type': 'application/json' }
      });
    }

    // 调用Python因子提取模块
    const pythonScript = path.join(process.cwd(), '../../factor_extractors/cli.py');
    const python = spawn('python3', [pythonScript, '--data', JSON.stringify(sentimentData), '--config', JSON.stringify(config)]);
    
    let result = '';
    let error = '';
    
    python.stdout.on('data', (data) => {
      result += data.toString();
    });
    
    python.stderr.on('data', (data) => {
      error += data.toString();
    });
    
    return new Promise((resolve) => {
      python.on('close', (code) => {
        if (code !== 0) {
          resolve(new Response(JSON.stringify({ 
            error: 'Python脚本执行失败', 
            details: error 
          }), {
            status: 500,
            headers: { 'Content-Type': 'application/json' }
          }));
        } else {
          try {
            const factorResult = JSON.parse(result);
            resolve(new Response(JSON.stringify(factorResult), {
              status: 200,
              headers: { 'Content-Type': 'application/json' }
            }));
          } catch (parseError) {
            resolve(new Response(JSON.stringify({ 
              error: '解析因子提取结果失败', 
              details: result 
            }), {
              status: 500,
              headers: { 'Content-Type': 'application/json' }
            }));
          }
        }
      });
    });
    
  } catch (error) {
    return new Response(JSON.stringify({ 
      error: '服务器内部错误', 
      details: error.message 
    }), {
      status: 500,
      headers: { 'Content-Type': 'application/json' }
    });
  }
}