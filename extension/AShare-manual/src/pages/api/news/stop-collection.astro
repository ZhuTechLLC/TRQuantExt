// 停止新闻收集API端点
import { spawn } from 'child_process';
import path from 'path';

export async function POST({ request }) {
  try {
    // 调用Python脚本停止收集
    const pythonScript = path.join(process.cwd(), '../../news_collectors/finnhub_collector.py');
    const python = spawn('python3', [pythonScript, '--stop-collection']);
    
    let result = '';
    let error = '';
    
    python.stdout.on('data', (data) => {
      result += data.toString();
    });
    
    python.stderr.on('data', (data) => {
      error += data.toString();
    });
    
    return new Promise((resolve) => {
      python.on('close', (code) => {
        if (code !== 0) {
          resolve(new Response(JSON.stringify({ 
            success: false,
            error: '停止收集失败', 
            details: error 
          }), {
            status: 500,
            headers: { 'Content-Type': 'application/json' }
          }));
        } else {
          resolve(new Response(JSON.stringify({
            success: true,
            message: '新闻收集已停止'
          }), {
            status: 200,
            headers: { 'Content-Type': 'application/json' }
          }));
        }
      });
    });
    
  } catch (error) {
    return new Response(JSON.stringify({ 
      success: false,
      error: '服务器内部错误', 
      details: error.message 
    }), {
      status: 500,
      headers: { 'Content-Type': 'application/json' }
    });
  }
}








