      // åˆ›å»ºå†…å®¹åŒºåŸŸ
      const contentDiv = document.createElement('div');
      contentDiv.className = 'news-content';
      contentDiv.innerHTML = `
        <div class="news-meta">
          <span class="news-tag tag-source">${item.source || 'Finnhub'}</span>
